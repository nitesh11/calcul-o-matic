<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calculomatic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
	<uses-permission android:name="android.permission.SEND_SMS"></uses-permission>
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.calculomatic.RegisterActivity" />
        <activity android:name="com.calculomatic.EventsActivity" />
        <activity android:name="com.calculomatic.AddEventActivity" />
        <activity android:name="com.calculomatic.ContributorActivity" />
        <activity android:name="com.calculomatic.AddContributorActivity" />
        <activity android:name="com.calculomatic.AddParticipantActivity" />
        <activity android:name="com.calculomatic.ProfileActivity" />
        <activity android:name="com.calculomatic.ExpenseActivity" />
        <activity android:name="com.calculomatic.EditEventActivity" />
        <activity android:name="com.calculomatic.UsersActivity" />
        <activity android:name="com.calculomatic.EditUserActivity" />        
    </application>

</manifest>